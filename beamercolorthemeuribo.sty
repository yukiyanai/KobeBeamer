\ProvidesPackage{beamercolorthemeuribo}[04/18/2015]

\mode<presentation>

\definecolor{kobebrick}{RGB}{196,0,0}
\definecolor{kobegreen}{RGB}{22,131,46}
\definecolor{kobeblue}{RGB}{14,47,146}
\definecolor{kobegray}{RGB}{77,77,77}

\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=kobebrick}
\setbeamercolor*{example text}{fg=kobeblue}
\setbeamercolor*{structure}{fg=kobegray,bg=white}

\setbeamerfont{alerted text}{series=\bfseries}

\setbeamercolor*{palette primary}{fg=white,bg=kobebrick}
\setbeamercolor*{palette secondary}{fg=white,bg=kobeblue}
\setbeamercolor*{palette tertiary}{fg=white,bg=kobegreen}
\setbeamercolor*{palette quaternary}{fg=black,bg=white}

\setbeamercolor{titlelike}{fg=white, bg=kobegray}
\setbeamercolor{frametitle}{fg=kobegray, bg=white}
\setbeamercolor{frametitle right}{fg=kobegray, bg=white}

\setbeamercolor{sidebar}{bg=kobegreen}

\setbeamercolor*{palette sidebar primary}{fg=black}
\setbeamercolor*{palette sidebar secondary}{fg=black}
\setbeamercolor*{palette sidebar tertiary}{fg=black}
\setbeamercolor*{palette sidebar quaternary}{fg=black}

\setbeamercolor*{item projected}{fg=black,bg=black!20}

\setbeamercolor{block title}{fg=white,bg=kobeblue}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=kobebrick}
\setbeamercolor{block title example}{use=example text,fg=white,bg=kobegreen}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!15!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!15!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!15!bg}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
